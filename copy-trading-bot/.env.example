# Hyperliquid gRPC Endpoint
HYPERLIQUID_ENDPOINT=alpha.n.dwellir.com
DWELLIR_API_KEY=API_KEY

# Your Hyperliquid account credentials
# Get these from your Hyperliquid account settings
HYPERLIQUID_PRIVATE_KEY=your_private_key_here
HYPERLIQUID_WALLET_ADDRESS=your_wallet_address_here

# Copy trading settings
TARGET_WALLET_ADDRESS=wallet_to_copy_here
COPY_PERCENTAGE=5.0  # What % of your account to use (e.g., 10 = 10%)

# Safety settings
DRY_RUN=true  # Set to 'false' to enable real trading (USE WITH CAUTION!)
MAX_POSITION_SIZE_USD=100  # Maximum position size in USD
MIN_POSITION_SIZE_USD=10   # Minimum position size in USD (note: Hyperliquid requires $10 notional minimum)
MAX_OPEN_POSITIONS=4       # Maximum number of positions to hold at once
SLIPPAGE_TOLERANCE_PCT=0.5 # Allow paying up to 0.5% more to improve fill rate (0 = exact price only)

# Optional: Trading filters
COIN_FILTER_MODE=ALL        # ALL = copy all coins, ENABLED = only copy specified coins
ENABLED_COINS=BTC,ETH,SOL   # Only used when COIN_FILTER_MODE=ENABLED
